# Database (use free tier options)
# PostgreSQL: supabase.com (free) or render.com (free)
# SQLite: built-in (perfect for free tier)
DATABASE_URL=file:./app.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-generate-this
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email Configuration (optional - for free tier signup confirmations)
# Use providers like Mailgun (free tier), SendGrid (free tier), or Resend
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@sovereon.com

# Optional: Payment Processing (Stripe test keys for testing)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Logging
LOG_LEVEL=debug
